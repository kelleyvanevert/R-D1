<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">
    <ImageView android:layout_height="wrap_content" android:scaleType="matrix" android:id="@+id/titlebar" android:layout_width="fill_parent" android:src="@drawable/settings" android:background="@drawable/titlebar"></ImageView>
    <LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="horizontal" android:id="@+id/themes">
        <LinearLayout android:layout_height="fill_parent" android:id="@+id/LinearLayout02" android:layout_width="150dip" android:orientation="vertical">
            <TextView android:layout_height="wrap_content" android:layout_gravity="top" android:layout_width="wrap_content" android:id="@+id/TextView01" android:gravity="center_vertical" android:text="@string/themeOption"></TextView>
        </LinearLayout>
        <LinearLayout android:layout_height="fill_parent" android:id="@+id/LinearLayout03" android:layout_width="fill_parent" android:orientation="vertical">
            <RadioGroup android:layout_height="wrap_content" android:id="@+id/themeRadio" android:layout_width="wrap_content">
                <RadioButton android:layout_height="wrap_content" android:text="@string/colourstheme" android:layout_width="wrap_content" android:id="@+id/colours" android:onClick="onThemeChange"></RadioButton>
                <RadioButton android:layout_height="wrap_content" android:text="@string/backgroundtheme" android:layout_width="wrap_content" android:id="@+id/background" android:onClick="onThemeChange"></RadioButton>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_height="fill_parent" android:orientation="horizontal" android:layout_width="fill_parent" android:id="@+id/option2">
        <LinearLayout android:layout_height="fill_parent" android:orientation="vertical" android:layout_width="150dip" android:id="@+id/names">
            <TextView android:layout_height="wrap_content" android:layout_gravity="top" android:text="Theme:" android:layout_width="wrap_content" android:id="@+id/textView1" android:gravity="center_vertical"></TextView>
        </LinearLayout>
        <LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/content" android:orientation="vertical">
            <Spinner android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/themeslist"></Spinner>
        </LinearLayout>
    </LinearLayout>
    <TextView android:typeface="monospace" android:id="@+id/debugMsg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Testtext!"></TextView>
</LinearLayout>
